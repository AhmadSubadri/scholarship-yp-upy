{
	"name": "ci3-tailwind-starter",
	"version": "1.0.0",
	"description": "A starter kit for integrating Tailwind CSS with CodeIgniter 3 projects.",
	"main": "index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"build": "npx tailwindcss -i ./src/input.css -o ./assets/css/tailwind.css --minify",
		"dev": "npx tailwindcss -i ./src/input.css -o ./assets/css/tailwind.css --watch",
		"start": "npm run dev"
	},
	"keywords": [
		"codeigniter",
		"tailwindcss",
		"starter",
		"php",
		"frontend",
		"css"
	],
	"author": "Abadbatok_ (asdev)",
	"license": "MIT",
	"devDependencies": {
		"tailwindcss": "^3.4.14",
		"postcss": "^8.4.47",
		"autoprefixer": "^10.4.20"
	},
	"dependencies": {
		"baseline-browser-mapping": "^2.8.23",
		"browserslist": "^4.27.0",
		"caniuse-lite": "^1.0.30001753",
		"electron-to-chromium": "^1.5.244",
		"escalade": "^3.2.0",
		"fraction.js": "^4.3.7",
		"nanoid": "^3.3.11",
		"node-releases": "^2.0.27",
		"normalize-range": "^0.1.2",
		"picocolors": "^1.1.1",
		"postcss-value-parser": "^4.2.0",
